<div class="container">
  <h1>This where people can leave an enquiry form</h1>
</div>

<div class="container">
    <%= simple_form_for @enquiry do |f| %>
    <%= f.input :name, as: :string %>
    <%= f.input :company_name, as: :string %>
    <%= f.input :email_address, as: :string %>
    <%= f.input :phone_number, as: :string %>
    <%= f.button :submit, "Submit your data enquiry", class: "btn btn-primary" %>
    <% end %>
</div>
